{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "env": {
    "node": true
  },
  "globals": {
    "expect": true,
    "ruleTester": true,
    "RuleTester": true
  },
  "rules": {
    "strict": ["error"],
    "indent": ["error", 2],

    "semi": ["error"],
    "prefer-const": ["error"],
    "no-var": ["error"],
    "prefer-destructuring": ["error"],
    "object-shorthand": ["error"],
    "quotes": ["error", "single"]
  }
}
